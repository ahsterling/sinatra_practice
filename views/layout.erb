  <link href="/css/layout.css" rel="stylesheet"]]>
  <title><%= @title %></title>
</head>

<body>

  <div class='header'>
    <div class='container'>
      <div class='brand'>
        <a href="/">allie sterling</a>
      </div> <!-- brand -->
      <div class='nav'>
        <ul class = 'horizontal-list'>
          <li><a href="/about-me">about</a></li>
          <li><a href='/posts'>blog</a></li>
          <li class='dropdown-anchor'>
            <a href="#">quotations</a>
            <ul class='dropdown'>
              <li><a href="/quotations/leslie-knope">Leslie Knope</a></li>
