
<h2>Recent Blog Posts</h2>

<% @posts.each do |post| %>
  <h3><a href="<%= post.url %>"><%= post.get_title %></a></h3>
  <h4><%= post.format_date %></h4>
  <p> <%= post.content %> </p>
<% end %>

