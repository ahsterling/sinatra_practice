


<h2 class = 'page-heading'>Recent Blog Posts</h2>

<% @posts.each do |post| %>
  <h3 class = 'blog-heading'><a href="<%= post.url %>" style="text-transform: capitalize"><%= post.get_title %></a></h3>
  <h4 class = 'blog-date'><%= post.format_date %></h4>
  <p> <%= post.preview %> </p>
  <br>
  <p><a href = "<%=post.url %>" > Read More . . . </a></p>
  <br>
<% end %>
