
<h2>Recent Blog Posts</h2>

<% @posts.each do |post| %>
  <h3><a href="<%= post.url %>" style="text-transform: capitalize"><%= post.get_title %></a></h3>
  <h4><%= post.format_date %></h4>
  <p> <%= post.preview %> </p>
  <br>
  <a href = "<%=post.url %>" style= "font-size: 14px" style="margin-left: 75px"> Read More . . . </a>
<% end %>

