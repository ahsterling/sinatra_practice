<div class = "page-heading">
  <h2>Home</h2>
</div>

<div class = 'body-container'>
  <% @posts.each do |post| %>
      <h3 class = 'body-heading'><a href="<%= post.url %>"><%= post.get_title %></a></h3>
      <h4 class = 'blog-date'><%= post.format_date %></h4>
      <p class= "body-content"> <%= post.preview %> </p>
      <br>
      <p class= "read-more"><a href = "<%=post.url %>" > Read More . . . </a></p>
      <br>
  <% end %>

</div> <!-- .blog-container -->
