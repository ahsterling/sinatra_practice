<h2 class="page-heading">The Blog</h2>
<div class="body-container">
  <% @posts.each do |post| %>
    <h3 class="body-heading"><a href="<%= post.url %>"><%= post.get_title %></a></h3>
      <h4 class = "blog-date">Published <%= post.format_date %></h4>
      <p> <%= post.content %> </p>
      <br>
<% end %>
</div>
